<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".GameActivity">

    <RelativeLayout
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        android:layout_marginLeft="10dp"
        android:background="@color/black50">

        <ImageView
            android:id="@+id/centerObject"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/white_box"/>

        <ImageView

            android:id="@+id/image_puzzle_1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@color/white10"

            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/centerObject"
            android:layout_above="@+id/centerObject"/>

        <ImageView
            android:id="@+id/image_puzzle_3"

            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@color/white10"

            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/centerObject"
            android:layout_below="@+id/centerObject"/>

        <ImageView
            android:id="@+id/image_puzzle_2"

            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@color/white10"

            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/centerObject"
            android:layout_above="@+id/centerObject"/>

        <ImageView
            android:id="@+id/image_puzzle_4"

            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@color/white10"

            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/centerObject"
            android:layout_below="@+id/centerObject"/>



    </RelativeLayout>
















</RelativeLayout>